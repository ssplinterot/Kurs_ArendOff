<Window x:Class="Kurs_ArendOff.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kurs_ArendOff"
        mc:Ignorable="d"
        Title="AuthWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#ECF0F1">

    <StackPanel Margin="30" VerticalAlignment="Center">

        <TextBlock Text="Авторизация" 
                   FontFamily="Circe Bold"
                   FontSize="34"                    
                   Foreground="#4E352F" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,30"/>

        <Label Content="Логин:" FontFamily="Circe Bold"/>
        <TextBox x:Name="TxtUsername" Padding="8" Margin="0,0,0,10"/>

        <Label Content="Пароль: " FontFamily="Circe Bold"/>
        <Grid Margin="0,0,0,20">
            <PasswordBox x:Name="PbPassword" 
                         Padding="8" 
                         VerticalContentAlignment="Center"
                         PasswordChanged="PbPassword_PasswordChanged"
                         Visibility="Visible"/>

            <TextBox x:Name="TxtPasswordVisible" 
                     Padding="8" 
                     VerticalContentAlignment="Center"
                     Visibility="Hidden"/>

            <Button x:Name="TogglePasswordVisibility"
                    HorizontalAlignment="Right"
                    Width="30" Height="30"
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="TogglePasswordVisibility_Click">

                <Image x:Name="EyeIcon" Source="/Icons/closed-eye.png" Width="20" Height="20"/>

            </Button>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

            <Button Content="Войти" 
                    FontFamily="Circe Bold"
                    FontSize="16"
                    Click="LoginButton_Click"
                    Background="#96695E"
                    Foreground="White"
                    Padding="20,10"
                    Margin="0,0,10,0"
                    Width="150"/>

            <Button Content="Регистрация" 
                    FontFamily="Circe Bold"
                    FontSize="16"
                    Click="RegisterButton_Click"
                    Background="#61443D"
                    Foreground="White"
                    Padding="20,10"
                    Width="150"/>

        </StackPanel>

    </StackPanel>
</Window>
