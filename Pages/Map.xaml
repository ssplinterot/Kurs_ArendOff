<Page x:Class="Kurs_ArendOff.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"

      Title="Map">

    <Grid>
        <Border Background="White" CornerRadius="10" Margin="20"/>
        <!-- Изображение карты -->
        <Grid>
            <Image Source="/MapImage/1.png" Stretch="Uniform"/>
            <Canvas >
                <!--Золотое яблоко-->
                <Rectangle x:Name="ЗЯ"
                    Width="292" Height="87"
                    Canvas.Left="433" Canvas.Top="39"
                     Fill="Transparent"
                     Tag="Золотое Яблко"  
                       MouseEnter="Rect_MouseEnter"
                       MouseLeave="Rect_MouseLeave"
                       MouseMove="Rect_MouseMove"
                       MouseLeftButtonUp="Place_MouseClick"
                     Cursor="Hand" HorizontalAlignment="Left" VerticalAlignment="Center">
                </Rectangle>

                <Rectangle x:Name="Булочки"
                    Width="62" Height="84"
                    Canvas.Left="594" Canvas.Top="177"
                    Fill="Transparent"
                    Tag="Булочки" 
                    MouseEnter="Rect_MouseEnter"
                    MouseLeave="Rect_MouseLeave"
                    MouseMove="Rect_MouseMove"
                    MouseLeftButtonUp="Place_MouseClick" 
                    Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center">
                </Rectangle>
            </Canvas>
            <!--Выплывающее окно-->
            <Border x:Name="popUpMenu"
                    Background="White"
                    BorderBrush="#96695e"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="12"
                    Width="220"
                    Visibility="Collapsed"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Panel.ZIndex="1000">
                <StackPanel Margin="0,5,50,0">
                    <TextBlock x:Name="popUpName"
                               Text="Название магазина"/>
                    <TextBlock x:Name="popUpArea"
                               Text="Площадь: 0 м²"
                               Margin="0,5,0,0"/>
                    <TextBlock x:Name="popUpRent"
                               Text="Аренда: 0 тыс.руб."
                               Margin="0,2,0,0"/>
                    <TextBlock x:Name="popUpStatus"
                               Text="Статус: свободно"
                               Margin="0,2,0,0"/>
                    <TextBlock x:Name="popUpDescription"
                               Text="Описание"
                               Margin="0,5,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>